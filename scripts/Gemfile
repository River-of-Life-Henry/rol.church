# frozen_string_literal: true

source "https://rubygems.org"

# Planning Center API
gem "pco_api"

# AWS SDK
gem "aws-sdk-rekognition"  # Face/text detection for Facebook photos
gem "aws-sdk-ses"          # Sending changelog emails

# Utilities
gem "parallel"             # Concurrent processing
gem "rexml"                # Required by AWS SDK for XML parsing

# Error monitoring
gem "bugsnag", "~> 6.0"
