---
/**
 * Footer Component
 *
 * Site footer with service times, location, contact info, social links, and giving button.
 * Also includes the floating prayer request button.
 *
 * Usage:
 *   <Footer />
 */

import PrayerRequestButton from './PrayerRequestButton.astro';
---

<footer>
  <div class="footer-content">
    <div class="footer-section service-times">
      <h4>Service Times</h4>
      <div class="times">
        <div class="time-block">
          <span class="day">Sunday</span>
          <span class="service"><span class="time">10 AM</span> Christian Education</span>
          <span class="service"><span class="time">11 AM</span> Worship Service</span>
        </div>
        <div class="time-block">
          <span class="day">Wednesday</span>
          <span class="service"><span class="time">7 PM</span> Bible Study</span>
        </div>
      </div>
    </div>
    <div class="footer-section">
      <h4>Location</h4>
      <div class="location-links">
        <a href="/directions" class="location-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/></svg>
          425 University Ave
        </a>
        <a href="/directions" class="location-item location-detail">
          Henry, IL 61537
        </a>
      </div>
    </div>
    <div class="footer-section">
      <h4>Contact</h4>
      <div class="contact-links">
        <a href="tel:+13093643165" class="contact-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
          (309) 364-3165
        </a>
        <a href="/about/contact" class="contact-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
          Send a Message
        </a>
        <a href="/give" class="contact-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
          Give Online
        </a>
      </div>
    </div>
    <div class="footer-section">
      <h4>Connect</h4>
      <div class="connect-links">
        <a href="https://www.facebook.com/rolhenry" target="_blank" rel="noopener noreferrer" class="connect-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          Facebook
        </a>
        <a href="https://www.youtube.com/@rol-henry" target="_blank" rel="noopener noreferrer" class="connect-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          YouTube
        </a>
        <a href="https://rolhenry.churchcenter.com" target="_blank" rel="noopener noreferrer" class="connect-item">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L2 7v2h2v11h6v-5h4v5h6V9h2V7L12 2zm0 2.84L18 8v10h-2v-5H8v5H6V8l6-3.16z"/></svg>
          Church Center
        </a>
      </div>
    </div>
  </div>
    <p class="tagline">Where life begins</p>
  <p class="copyright">&copy; {new Date().getFullYear()} River of Life, Henry, IL</p>
</footer>

<PrayerRequestButton />

<style>
  footer {
    background: var(--color-navy);
    color: white;
    padding: 3rem 2rem 1rem;
    margin-top: auto;
  }

  .footer-content {
    max-width: 1000px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.2fr 1fr 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .footer-section.service-times {
    padding-right: 1rem;
  }

  .footer-section h4 {
    font-family: var(--font-sans);
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-size: 1rem;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-section a {
    color: var(--color-teal);
  }

  .footer-section a:hover {
    color: white;
  }

  .times {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .time-block {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .time-block .day {
    font-weight: 600;
    color: white;
    font-size: 0.95rem;
  }

  .time-block .service {
    font-size: 0.875rem;
    color: rgba(255,255,255,0.8);
  }

  .time-block .service .time {
    color: var(--color-teal);
    font-weight: 600;
    margin-right: 0.5rem;
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Monaco, Consolas, monospace;
  }

  .location-links {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .location-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.9) !important;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .location-item:hover {
    color: var(--color-teal) !important;
  }

  .location-item svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .location-detail {
    padding-left: 1.625rem;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.9) !important;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--color-teal) !important;
  }

  .contact-item svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .connect-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .connect-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.9) !important;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .connect-item:hover {
    color: var(--color-teal) !important;
  }

  .connect-item svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .tagline {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    color: var(--color-gold);
    font-family: var(--font-script);
    font-size: 1.5rem;
  }

  .copyright {
    text-align: center;
    margin-top: 0.5rem;
    color: rgba(255,255,255,0.7);
    font-size: 0.875rem;
  }

  @media (max-width: 900px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 600px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      text-align: center;
    }

    .footer-section.service-times {
      padding-right: 0;
    }

    .location-links {
      align-items: center;
    }

    .location-detail {
      padding-left: 0;
    }

    .contact-links {
      align-items: center;
    }

    .connect-links {
      align-items: center;
    }
  }
</style>
