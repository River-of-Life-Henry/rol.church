---
import heroData from '../data/hero_images.json';

const images = heroData.images || [
  '/hero/1.jpg',
  '/hero/2.jpg',
  '/hero/3.jpg',
];

// Calculate animation timing based on number of images
const slideTime = 6; // seconds per slide
const totalDuration = images.length * slideTime;

// Calculate keyframe percentages
const fadeInEnd = (1 / images.length) * 0.12 * 100;
const fadeOutStart = (1 / images.length) * 0.88 * 100;
const slideEnd = (1 / images.length) * 100;

// Transform origins for variety
const transformOrigins = [
  'center center',
  'top left',
  'bottom right',
  'top right',
  'center left',
  'bottom left',
  'top center',
  'bottom center',
  'center right',
];
---

<div class="hero-slider" style={`--total-duration: ${totalDuration}s`}>
  <div class="slides">
    {images.map((src, i) => (
      <div
        class="slide"
        style={`animation-delay: ${i * slideTime}s`}
      >
        <img
          src={src}
          alt=""
          loading={i === 0 ? "eager" : "lazy"}
          fetchpriority={i === 0 ? "high" : "low"}
          decoding={i === 0 ? "sync" : "async"}
          style={`animation-delay: ${i * slideTime}s; transform-origin: ${transformOrigins[i % transformOrigins.length]}`}
        />
      </div>
    ))}
  </div>
  <div class="overlay"></div>
  <div class="content">
    <slot />
  </div>
</div>

<style define:vars={{ fadeInEnd: `${fadeInEnd}%`, fadeOutStart: `${fadeOutStart}%`, slideEnd: `${slideEnd}%` }}>
  .hero-slider {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .slides {
    position: absolute;
    inset: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    animation: kenburns var(--total-duration) infinite;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: zoom var(--total-duration) infinite;
  }

  @keyframes kenburns {
    0% { opacity: 0; }
    2% { opacity: 1; }
    12% { opacity: 1; }
    14% { opacity: 0; }
    100% { opacity: 0; }
  }

  @keyframes zoom {
    0% { transform: scale(1); }
    14% { transform: scale(1.15); }
    100% { transform: scale(1.15); }
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 58, 74, 0.65) 0%,
      rgba(26, 58, 74, 0.75) 100%
    );
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    padding-top: calc(var(--header-height) + 2rem);
    color: white;
  }
</style>
