---
const images = [
  '/hero/1.jpg',
  '/hero/2.jpg',
  '/hero/3.jpg',
  '/hero/4.jpg',
  '/hero/5.jpg',
  '/hero/6.jpg',
  '/hero/7.jpg',
];
---

<div class="hero-slider">
  <div class="slides">
    {images.map((src, i) => (
      <div class="slide" style={`animation-delay: ${i * 6}s`}>
        <img src={src} alt="" />
      </div>
    ))}
  </div>
  <div class="overlay"></div>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .hero-slider {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .slides {
    position: absolute;
    inset: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    animation: kenburns 42s infinite;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: zoom 42s infinite;
  }

  /* Stagger the animations - 6s visible, crossfade with next */
  .slide:nth-child(1) { animation-delay: 0s; }
  .slide:nth-child(1) img { animation-delay: 0s; transform-origin: center center; }

  .slide:nth-child(2) { animation-delay: 6s; }
  .slide:nth-child(2) img { animation-delay: 6s; transform-origin: top left; }

  .slide:nth-child(3) { animation-delay: 12s; }
  .slide:nth-child(3) img { animation-delay: 12s; transform-origin: bottom right; }

  .slide:nth-child(4) { animation-delay: 18s; }
  .slide:nth-child(4) img { animation-delay: 18s; transform-origin: top right; }

  .slide:nth-child(5) { animation-delay: 24s; }
  .slide:nth-child(5) img { animation-delay: 24s; transform-origin: center left; }

  .slide:nth-child(6) { animation-delay: 30s; }
  .slide:nth-child(6) img { animation-delay: 30s; transform-origin: bottom left; }

  .slide:nth-child(7) { animation-delay: 36s; }
  .slide:nth-child(7) img { animation-delay: 36s; transform-origin: top center; }

  @keyframes kenburns {
    0% { opacity: 0; }
    2% { opacity: 1; }
    14% { opacity: 1; }
    16% { opacity: 0; }
    100% { opacity: 0; }
  }

  @keyframes zoom {
    0% { transform: scale(1); }
    16% { transform: scale(1.15); }
    100% { transform: scale(1.15); }
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 58, 74, 0.65) 0%,
      rgba(26, 58, 74, 0.75) 100%
    );
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    padding-top: calc(var(--header-height) + 2rem);
    color: white;
  }
</style>
