---
/**
 * TestimonialsCarousel Component
 *
 * Rotating testimonials from Google and Facebook reviews.
 * Features staggered flip animations for 3 columns.
 * Loads review data from reviews.json including photos, ratings, and profile links.
 *
 * Usage:
 *   <TestimonialsCarousel />
 */

// Load reviews from JSON
import reviewsData from '../../data/reviews.json';

// Get featured reviews (those with text content and 5-star ratings only)
const allReviews = reviewsData.reviews.filter(r =>
  r.text && r.text.length > 0 && r.featured && r.rating === 5
);

// Split reviews into 3 columns for the carousel
const columns = [
  allReviews.filter((_, i) => i % 3 === 0),
  allReviews.filter((_, i) => i % 3 === 1),
  allReviews.filter((_, i) => i % 3 === 2),
].filter(col => col.length > 0);

// Get summary data
const googleSummary = reviewsData.summary?.google;
const facebookSummary = reviewsData.summary?.facebook;

// Build rating text
let ratingText = '';
if (googleSummary?.rating) {
  ratingText = `${googleSummary.rating} on Google`;
}
if (facebookSummary?.recommendation_percent) {
  if (ratingText) ratingText += ' • ';
  ratingText += `${facebookSummary.recommendation_percent}% recommend on Facebook`;
}

// Helper to render star rating
function getStarCount(rating: number): number {
  return Math.round(rating || 5);
}
---

<section class="testimonials-section">
  <div class="container">
    <div class="testimonials-header">
      <div class="google-rating">
        <div class="stars">
          {Array(5).fill(0).map((_, i) => (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class={i < getStarCount(googleSummary?.rating) ? 'filled' : 'empty'}>
              <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
            </svg>
          ))}
        </div>
        <span class="rating-text">{ratingText || '4.7 on Google • 100% recommend on Facebook'}</span>
      </div>
      <h2>What People Are Saying</h2>
    </div>
    <div class="testimonials-carousel" id="testimonials-carousel">
      {columns.map((column, colIndex) => (
        <div class="testimonial-stack" id={`testimonial-stack-${colIndex + 1}`}>
          {column.map((review, index) => (
            <a
              href={review.author?.profile_url || '#'}
              target={review.author?.profile_url ? '_blank' : undefined}
              rel={review.author?.profile_url ? 'noopener noreferrer' : undefined}
              class={`testimonial ${index === 0 ? 'active' : ''} ${review.author?.profile_url ? 'clickable' : ''}`}
            >
              <div class="testimonial-content">
                {review.author?.photo_url && (
                  <img
                    src={review.author.photo_url}
                    alt={review.author.name}
                    class="author-photo"
                    loading="lazy"
                  />
                )}
                <div class="testimonial-text">
                  {review.rating && (
                    <div class="review-stars">
                      {Array(5).fill(0).map((_, i) => (
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class={i < review.rating ? 'filled' : 'empty'}>
                          <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                        </svg>
                      ))}
                    </div>
                  )}
                  <p class="quote">"{review.text}"</p>
                  <p class="author">— {review.author?.name || 'Anonymous'}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      ))}
    </div>
    <div class="reviews-links">
      <a href={googleSummary?.reviews_url || "https://www.google.com/maps/place/River+of+Life+-+Henry/@41.1077425,-89.3698345,1774m/data=!3m1!1e3!4m8!3m7!1s0x880bcd7f0f9c7c13:0x7cda490fc2394ad2!8m2!3d41.1059214!4d-89.3740112!9m1!1b1!16s%2Fg%2F1tdb0872?entry=ttu"} target="_blank" rel="noopener noreferrer" class="reviews-link">
        Google Reviews &rarr;
      </a>
      <a href={facebookSummary?.reviews_url || "https://www.facebook.com/rolhenry/reviews"} target="_blank" rel="noopener noreferrer" class="reviews-link">
        Facebook Reviews &rarr;
      </a>
    </div>
  </div>
</section>

<script>
  // Testimonial rotation with staggered timing
  document.addEventListener('DOMContentLoaded', () => {
    const stacks = document.querySelectorAll('.testimonial-stack');

    stacks.forEach((stack, stackIndex) => {
      const testimonials = stack.querySelectorAll('.testimonial');
      if (testimonials.length <= 1) return; // No rotation needed for single items

      let currentIndex = 0;

      const baseInterval = 5000;
      const staggerDelay = stackIndex * 1500;

      function rotateTestimonial() {
        const current = testimonials[currentIndex];
        const nextIndex = (currentIndex + 1) % testimonials.length;
        const next = testimonials[nextIndex];

        current.classList.add('exiting');
        current.classList.remove('active');

        setTimeout(() => {
          current.classList.remove('exiting');
          next.classList.add('active');
        }, 300);

        currentIndex = nextIndex;
      }

      setTimeout(() => {
        setInterval(rotateTestimonial, baseInterval);
      }, staggerDelay);
    });
  });
</script>

<style>
  .testimonials-section {
    padding: 5rem 2rem;
    background: var(--color-bg-alt);
  }

  .testimonials-section .container {
    max-width: 1100px;
    margin: 0 auto;
    text-align: center;
  }

  .testimonials-header {
    margin-bottom: 3rem;
  }

  .google-rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .google-rating .stars {
    display: flex;
    gap: 0.15rem;
  }

  .google-rating .stars svg {
    width: 20px;
    height: 20px;
  }

  .google-rating .stars svg.filled {
    color: #FBBC04;
  }

  .google-rating .stars svg.empty {
    color: #e0e0e0;
  }

  .rating-text {
    font-size: 0.9rem;
    color: var(--color-text-light);
    font-weight: 500;
  }

  .testimonials-header h2 {
    color: var(--color-navy);
    font-size: 2rem;
  }

  .testimonials-carousel {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .testimonial-stack {
    position: relative;
    height: 220px;
    perspective: 1000px;
  }

  .testimonial {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    text-align: left;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    opacity: 0;
    transform: rotateX(-90deg) translateY(-20px);
    transform-origin: top center;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .testimonial.clickable {
    cursor: pointer;
  }

  .testimonial.clickable:hover {
    box-shadow: 0 6px 25px rgba(0,0,0,0.12);
    transform: rotateX(0deg) translateY(-2px);
  }

  .testimonial.active {
    opacity: 1;
    transform: rotateX(0deg) translateY(0);
  }

  .testimonial.exiting {
    opacity: 0;
    transform: rotateX(90deg) translateY(20px);
    transform-origin: bottom center;
  }

  .testimonial-content {
    display: flex;
    gap: 1rem;
    height: 100%;
    align-items: flex-start;
  }

  .author-photo {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .testimonial-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    min-width: 0;
  }

  .review-stars {
    display: flex;
    gap: 0.1rem;
    margin-bottom: 0.5rem;
  }

  .review-stars svg {
    width: 14px;
    height: 14px;
  }

  .review-stars svg.filled {
    color: #FBBC04;
  }

  .review-stars svg.empty {
    color: #e0e0e0;
  }

  .testimonial .quote {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text);
    margin-bottom: 0.75rem;
    font-style: italic;
  }

  .testimonial .author {
    font-size: 0.85rem;
    color: var(--color-teal);
    font-weight: 600;
  }

  .reviews-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .reviews-link {
    color: var(--color-teal);
    font-weight: 500;
    text-decoration: none;
  }

  .reviews-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 900px) {
    .testimonials-carousel {
      grid-template-columns: 1fr;
    }
    .testimonial-stack {
      height: 200px;
    }
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 1.5rem 0.75rem;
    }
    .testimonials-header {
      margin-bottom: 1rem;
    }
    .testimonials-header h2 {
      font-size: 1.1rem;
    }
    .google-rating .stars svg {
      width: 16px;
      height: 16px;
    }
    .rating-text {
      font-size: 0.75rem;
    }
    .testimonials-carousel {
      grid-template-columns: 1fr;
      gap: 0.75rem;
      margin-bottom: 0.75rem;
    }
    .testimonial-stack {
      height: 180px;
    }
    .testimonial {
      padding: 1rem;
    }
    .author-photo {
      width: 40px;
      height: 40px;
    }
    .testimonial .quote {
      font-size: 0.9rem;
      line-height: 1.5;
      margin-bottom: 0.5rem;
    }
    .testimonial .author {
      font-size: 0.8rem;
    }
    .reviews-link {
      font-size: 0.8rem;
    }
  }
</style>
