---
import heroData from '../../data/hero_images.json';

// Use 5 most recent images for home slider (per user request)
// These are sorted newest first in hero_images.json
const allImages = heroData.images || [
  '/hero/1.jpg',
  '/hero/2.jpg',
  '/hero/3.jpg',
];
const images = allImages.slice(0, 5);

// Calculate animation timing based on number of images
const slideTime = 6; // seconds per slide
const totalDuration = images.length * slideTime;

// Calculate keyframe percentages
const fadeInEnd = (1 / images.length) * 0.12 * 100;
const fadeOutStart = (1 / images.length) * 0.88 * 100;
const slideEnd = (1 / images.length) * 100;

// Transform origins for variety
const transformOrigins = [
  'center center',
  'top left',
  'bottom right',
  'top right',
  'center left',
  'bottom left',
  'top center',
  'bottom center',
  'center right',
];
---

<div class="hero-slider" style={`--total-duration: ${totalDuration}s`}>
  <div class="slides">
    {images.map((src, i) => {
      const webpSrc = src.replace(/\.jpg$/, '.webp');
      return (
        <div
          class="slide"
          style={`animation-delay: ${i * slideTime}s`}
        >
          <picture>
            <source srcset={webpSrc} type="image/webp" />
            <img
              src={src}
              alt=""
              width="1920"
              height="1080"
              loading={i === 0 ? "eager" : "lazy"}
              fetchpriority={i === 0 ? "high" : "low"}
              decoding={i === 0 ? "sync" : "async"}
              style={`animation-delay: ${i * slideTime}s; transform-origin: ${transformOrigins[i % transformOrigins.length]}`}
            />
          </picture>
        </div>
      );
    })}
  </div>
  <div class="overlay"></div>
  <div class="content">
    <slot />
  </div>
</div>

<style define:vars={{ fadeInEnd: `${fadeInEnd}%`, fadeOutStart: `${fadeOutStart}%`, slideEnd: `${slideEnd}%` }}>
  .hero-slider {
    position: relative;
    height: 100vh;
    min-height: 600px;
    overflow: hidden;
  }

  .slides {
    position: absolute;
    inset: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    animation: kenburns var(--total-duration) infinite;
  }

  .slide picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: zoom var(--total-duration) infinite;
  }

  /* With 4 images, each gets 25% of total time (6s each for 24s total)
     Image timing: 0% fade in -> 22% hold -> 25% fade out (but next starts at 25%)
     Overlap: next image fades in while current fades out */
  @keyframes kenburns {
    0% { opacity: 0; }
    4% { opacity: 1; }
    25% { opacity: 1; }
    29% { opacity: 0; }
    100% { opacity: 0; }
  }

  @keyframes zoom {
    0% { transform: scale(1); }
    29% { transform: scale(1.12); }
    100% { transform: scale(1.12); }
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 58, 74, 0.65) 0%,
      rgba(26, 58, 74, 0.75) 100%
    );
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 2rem;
    padding-top: calc(var(--header-height) + 2rem);
    color: white;
  }

  @media (max-width: 768px) {
    .hero-slider {
      height: 100vh;
      height: 100svh; /* Use small viewport height to account for browser chrome */
      min-height: 500px;
    }

    .content {
      padding: 1rem;
      padding-top: 5rem;
      padding-bottom: 2rem;
      justify-content: center;
    }
  }
</style>
