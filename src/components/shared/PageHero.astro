---
import heroData from '../../data/hero_images.json';

interface Props {
  title: string;
  subtitle?: string;
  image?: string;
}

const { title, subtitle, image } = Astro.props;

// Simple hash function for deterministic page-to-image mapping
function hashCode(str: string): number {
  let hash = 0;
  for (let i = 0; i < str.length; i++) {
    const char = str.charCodeAt(i);
    hash = ((hash << 5) - hash) + char;
    hash = hash & hash; // Convert to 32bit integer
  }
  return Math.abs(hash);
}

// Auto-select header image based on URL path if no image provided
function getHeroImage(): string {
  // If explicit image provided, use it (groups pass their own images)
  if (image) return image;

  const path = Astro.url.pathname;

  // Groups pages get their images from Planning Center Groups, not header_* files
  // They should always pass an explicit image prop
  if (path.startsWith('/groups/')) {
    // Fallback for groups without images - use page background pool
    const allImages = heroData.images || ['/hero/1.jpg'];
    const pageBackgrounds = allImages.slice(5); // Skip first 5 (used by home slider)
    if (pageBackgrounds.length === 0) {
      return allImages[0] || '/hero/1.jpg';
    }
    const index = hashCode(path) % pageBackgrounds.length;
    return pageBackgrounds[index];
  }

  // Get current URL path and convert to header key
  // e.g., /pastor/ -> pastor, /next-steps/visit/ -> next_steps_visit
  const headerKey = path
    .replace(/^\/|\/$/g, '')  // Remove leading/trailing slashes
    .replace(/[^a-zA-Z0-9]/g, '_')  // Replace non-alphanumeric with underscore
    .toLowerCase();

  // Check if we have a header image for this page
  const headers = heroData.headers || {};
  if (headers[headerKey]) {
    return headers[headerKey];
  }

  // Page backgrounds: Use images after the first 5 (which are reserved for home slider)
  // Each page gets a deterministic but unique background based on its path
  const allImages = heroData.images || ['/hero/1.jpg'];
  const pageBackgrounds = allImages.slice(5); // Skip first 5 (used by home slider)

  // If not enough images, fall back to all images
  if (pageBackgrounds.length === 0) {
    return allImages[hashCode(path) % allImages.length] || '/hero/1.jpg';
  }

  // Deterministic selection based on page path (so each page always gets same image)
  const index = hashCode(path) % pageBackgrounds.length;
  return pageBackgrounds[index];
}

const heroImage = getHeroImage();
---

<section class="page-hero" style={`background-image: url('${heroImage}')`}>
  <div class="overlay"></div>
  <div class="content">
    <h1>{title}</h1>
    {subtitle && <p>{subtitle}</p>}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    background-size: cover;
    background-position: center;
    color: white;
    padding: 10rem 2rem 5rem;
    padding-top: calc(var(--header-height) + 5rem);
    text-align: center;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 58, 74, 0.7) 0%,
      rgba(26, 58, 74, 0.8) 100%
    );
  }

  .content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .page-hero h1 {
    font-family: var(--font-sans);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .page-hero p {
    font-family: var(--font-script);
    font-size: 1.5rem;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 1.5rem 4rem;
      min-height: 250px;
    }
    .page-hero h1 {
      font-size: 2rem;
    }
  }
</style>
