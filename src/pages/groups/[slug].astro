---
/**
 * Group Detail Page
 *
 * Displays individual group information including description, schedule,
 * upcoming events, and leaders.
 */

import Base from '../../layouts/Base.astro';
import EventCard from '../../components/EventCard.astro';
import LeaderCard from '../../components/LeaderCard.astro';
import groupsJson from '../../data/groups.json';

// Cache buster version (use updated_at timestamp)
const cacheVersion = groupsJson.updated_at ? `?v=${new Date(groupsJson.updated_at).getTime()}` : '';

// Load events from Calendar
let allEvents = [];
try {
  const eventsData = await import('../../data/events.json');
  allEvents = eventsData.events || [];
} catch (e) {
  console.log('Events data not yet generated');
}

export function getStaticPaths() {
  const groups = groupsJson.groups || [];

  return groups.map((group) => ({
    params: { slug: group.slug },
    props: { group }
  }));
}

const { slug } = Astro.params;
const { group } = Astro.props;

// Fallback if group not found
if (!group) {
  return Astro.redirect('/groups');
}

// Strip HTML tags from description for meta
function stripHtml(html: string): string {
  return html.replace(/<[^>]*>/g, '').trim();
}

// Filter events that match this group by name or tags
const groupNameLower = group.name.toLowerCase();
const groupEvents = allEvents.filter(event => {
  const eventNameLower = (event.name || '').toLowerCase();
  const eventTags = (event.tags || []).map(t => t.toLowerCase());

  // Match by event name containing group name
  if (eventNameLower.includes(groupNameLower)) return true;

  // Match by group name containing first word of event name
  if (groupNameLower.includes(eventNameLower.split(' ')[0] || '')) return true;

  // Match by tags
  if (eventTags.some(tag => tag.includes(groupNameLower) || groupNameLower.includes(tag))) return true;

  return false;
}).slice(0, 10);

// Capitalize AM/PM in schedule text
function capitalizeAmPm(text: string): string {
  if (!text) return text;
  return text.replace(/(\d)(am|pm)/gi, (_, num, period) => `${num} ${period.toUpperCase()}`);
}

const metaDescription = group.description
  ? stripHtml(group.description).substring(0, 160)
  : `Learn about the ${group.name} group at River of Life church.`;
---

<Base title={group.name} description={metaDescription}>
  <!-- Hero with group header image -->
  <section class="group-hero" style={group.hasHeaderImage ? `background-image: url('${group.headerImage}${cacheVersion}')` : ''}>
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>{group.name}</h1>
    </div>
  </section>

  <section class="group-content">
    <div class="group-container">
      <!-- Description -->
      {group.description && (
        <div class="group-description">
          <Fragment set:html={group.description} />
        </div>
      )}

      <!-- Schedule Section -->
      {group.schedule && (
        <div class="schedule-section">
          <div class="schedule-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/></svg>
          </div>
          <div class="schedule-text">
            <span class="schedule-label">When We Meet</span>
            <span class="schedule-time">{capitalizeAmPm(group.schedule)}</span>
          </div>
        </div>
      )}

      <!-- Upcoming Events Section -->
      {groupEvents.length > 0 && (
        <div class="events-section">
          <h2>Upcoming Events</h2>
          <div class="events-list">
            {groupEvents.map((event) => (
              <EventCard event={event} />
            ))}
          </div>
        </div>
      )}

      <!-- Leaders Section -->
      {group.leaders.length > 0 && (
        <div class="leaders-section">
          <h2>Meet the Leaders</h2>
          <div class={`leaders-grid ${group.leaders.length === 1 ? 'single-leader' : ''}`}>
            {group.leaders.map((leader) => (
              <LeaderCard leader={leader} cacheVersion={cacheVersion} />
            ))}
          </div>
        </div>
      )}

      <!-- Contact / Join Section -->
      <div class="join-section">
        <h2>Want to Join?</h2>
        <p>We'd love to have you! Reach out to connect with this group.</p>
        <div class="join-actions">
          <a href="/contact" class="btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
            Contact Us
          </a>
        </div>
      </div>

      <!-- Back to Groups -->
      <div class="back-link">
        <a href="/groups">&larr; View All Groups</a>
      </div>
    </div>
  </section>
</Base>

<style>
  .group-hero {
    position: relative;
    background-size: cover;
    background-position: center;
    background-color: var(--color-navy);
    color: white;
    padding: 10rem 2rem 5rem;
    padding-top: calc(var(--header-height) + 5rem);
    text-align: center;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .group-hero .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(26, 58, 74, 0.7) 0%,
      rgba(26, 58, 74, 0.8) 100%
    );
  }

  .group-hero .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
  }

  .group-hero h1 {
    font-family: var(--font-sans);
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: 0.02em;
  }

  .group-content {
    padding: 4rem 2rem;
  }

  .group-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .group-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
    margin-bottom: 3rem;
  }

  .group-description :global(div) {
    margin-bottom: 1rem;
  }

  .schedule-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: 0.75rem;
    margin-bottom: 2rem;
    border-left: 4px solid var(--color-teal);
  }

  .schedule-icon {
    color: var(--color-teal);
    flex-shrink: 0;
  }

  .schedule-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .schedule-label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-light);
    font-weight: 600;
  }

  .schedule-time {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--color-navy);
  }

  .events-section {
    margin-bottom: 3rem;
  }

  .events-section h2 {
    color: var(--color-navy);
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .leaders-section {
    margin-bottom: 3rem;
  }

  .leaders-section h2 {
    color: var(--color-navy);
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .leaders-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .leaders-grid.single-leader {
    grid-template-columns: 1fr;
    max-width: 400px;
  }

  .join-section {
    text-align: center;
    background: var(--color-navy);
    color: white;
    padding: 3rem;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }

  .join-section h2 {
    color: var(--color-gold);
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .join-section > p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .join-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .back-link {
    text-align: center;
  }

  .back-link a {
    color: var(--color-teal);
    font-weight: 600;
    text-decoration: none;
  }

  .back-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .group-hero {
      padding: 8rem 1.5rem 4rem;
      min-height: 250px;
    }

    .group-hero h1 {
      font-size: 2rem;
    }

    .leaders-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .join-section {
      padding: 2rem 1.5rem;
    }
  }
</style>
