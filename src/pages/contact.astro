---
import Base from '../layouts/Base.astro';
import PageHero from '../components/PageHero.astro';
---

<Base title="Contact" description="Get in touch with River of Life. We'd love to hear from you.">
  <PageHero title="Contact Us" image="/hero/3.jpg" />

  <!-- Location Section -->
  <section class="contact-section">
    <div class="section-inner">
      <div class="icon-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
        </svg>
      </div>
      <h2>Find Us</h2>
      <a href="/directions" class="section-link">
        425 University Ave<br />
        Henry, IL 61537
      </a>
      <a href="/directions" class="btn-outline">Get Directions</a>
    </div>
  </section>

  <!-- Service Times Section -->
  <section class="contact-section alt">
    <div class="section-inner">
      <div class="icon-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
        </svg>
      </div>
      <h2>Service Times</h2>
      <div class="times-grid">
        <div class="time-block">
          <h3>Sunday</h3>
          <p><span class="time">10 AM</span> Christian Education</p>
          <p><span class="time">11 AM</span> Main Service</p>
        </div>
        <div class="time-block">
          <h3>Wednesday</h3>
          <p><span class="time">7 PM</span> Bible Study</p>
        </div>
      </div>
      <a href="/next-steps/visit" class="btn-outline">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zM5 8V6h14v2H5zm2 4h10v2H7v-2zm0 4h7v2H7v-2z"/></svg>
        Plan Your Visit
      </a>
    </div>
  </section>

  <!-- Phone Section -->
  <section class="contact-section">
    <div class="section-inner">
      <div class="icon-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
      </div>
      <h2>Call Us</h2>
      <a href="tel:+13093643165" class="phone-number">(309) 364-3165</a>
    </div>
  </section>

  <!-- Message Section -->
  <section class="contact-section alt">
    <div class="section-inner">
      <div class="icon-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
      </div>
      <h2>Send a Message</h2>
      <p class="section-desc">Have a question or want to learn more? We'd love to hear from you!</p>
      <a
        href="https://rolhenry.churchcenter.com/people/forms/1102449"
        data-open-in-church-center-modal="true"
        class="btn-primary"
      >
        Contact Us
      </a>
    </div>
  </section>

  <!-- Connect Section -->
  <section class="contact-section">
    <div class="section-inner">
      <div class="icon-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
        </svg>
      </div>
      <h2>Connect With Us</h2>
      <div class="social-links">
        <a href="https://www.facebook.com/rolhenry" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Facebook
        </a>
        <a href="https://www.youtube.com/@rol-henry" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          YouTube
        </a>
        <a href="https://rolhenry.churchcenter.com" target="_blank" class="social-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2L2 7v2h2v11h6v-5h4v5h6V9h2V7L12 2zm0 2.84L18 8v10h-2v-5H8v5H6V8l6-3.16z"/>
          </svg>
          Church Center
        </a>
      </div>
    </div>
  </section>
</Base>

<script src="https://js.churchcenter.com/modal/v1"></script>

<style>
  .contact-section {
    padding: 4rem 2rem;
    text-align: center;
  }

  .contact-section.alt {
    background: var(--color-bg-alt);
  }

  .section-inner {
    max-width: 600px;
    margin: 0 auto;
  }

  .icon-circle {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--color-teal) 0%, var(--color-teal-dark) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    box-shadow: 0 4px 20px rgba(45, 156, 202, 0.3);
  }

  .contact-section h2 {
    color: var(--color-navy);
    font-size: 1.75rem;
    margin-bottom: 1rem;
  }

  .section-link {
    display: block;
    color: var(--color-navy);
    font-size: 1.25rem;
    line-height: 1.6;
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }

  .section-link:hover {
    color: var(--color-teal);
  }

  .phone-number {
    display: block;
    color: var(--color-navy);
    font-size: 2rem;
    font-weight: 700;
    text-decoration: none;
    transition: color 0.2s;
  }

  .phone-number:hover {
    color: var(--color-teal);
  }

  .section-desc {
    color: var(--color-text-light);
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .times-grid {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 1.5rem;
  }

  .time-block {
    text-align: left;
    display: inline-block;
  }

  .time-block h3 {
    color: var(--color-teal);
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .time-block p {
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .time-block .time {
    font-weight: 600;
    color: var(--color-navy);
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Monaco, Consolas, monospace;
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 2rem;
    border: 2px solid var(--color-teal);
    color: var(--color-teal);
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-outline:hover {
    background: var(--color-teal);
    color: white;
  }

  .btn-primary {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--color-teal);
    color: white !important;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-teal-dark);
    transform: translateY(-2px);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--color-bg-alt);
    color: var(--color-navy);
    font-weight: 500;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
  }

  .social-link:hover {
    background: var(--color-teal);
    color: white;
    transform: translateY(-2px);
  }

  .social-link svg {
    opacity: 0.8;
  }

  .social-link:hover svg {
    opacity: 1;
  }

  @media (max-width: 600px) {
    .contact-section {
      padding: 3rem 1.5rem;
    }

    .times-grid {
      flex-direction: column;
      gap: 1.5rem;
    }

    .phone-number {
      font-size: 1.5rem;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }

    .social-link {
      width: 100%;
      max-width: 200px;
      justify-content: center;
    }
  }
</style>
