---
import Base from '../layouts/Base.astro';
import PageHero from '../components/PageHero.astro';
---

<Base title="Contact" description="Get in touch with River of Life. We'd love to hear from you.">
  <PageHero title="Contact Us" image="/hero/7.jpg" />

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>Get In Touch</h2>

          <div class="info-item">
            <h3>Location</h3>
            <a href="/directions" class="address-link">425 University Ave<br />Henry, IL 61537</a>
          </div>

          <div class="info-item">
            <h3>Phone</h3>
            <p><a href="tel:+13093643165">(309) 364-3165</a></p>
          </div>

          <div class="info-item">
            <h3>Service Times</h3>
            <p><strong>Sunday</strong><br />Christian Education: 10:00 AM<br />Main Service: 11:00 AM</p>
            <p><strong>Wednesday</strong><br />Bible Study: 7:00 PM</p>
          </div>

          <div class="social-section">
            <h3>Connect With Us</h3>
            <div class="social-buttons">
              <a href="https://www.facebook.com/rolhenry" target="_blank" class="social-btn">Facebook</a>
              <a href="https://www.youtube.com/@rol-henry" target="_blank" class="social-btn">YouTube</a>
              <a href="https://rolhenry.churchcenter.com" target="_blank" class="social-btn">Church Center</a>
            </div>
          </div>
        </div>

        <div class="contact-form">
          <h2>Send a Message</h2>
          <p class="form-intro">Have a question or want to learn more? We'd love to hear from you!</p>
          <a
            href="https://rolhenry.churchcenter.com/people/forms/1102449"
            data-open-in-church-center-modal="true"
            class="btn btn-large"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>

<script src="https://js.churchcenter.com/modal/v1"></script>

<style>
  .contact-content {
    padding: 4rem 2rem;
  }

  .contact-content .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact-info h2,
  .contact-form h2 {
    color: var(--color-navy);
    font-size: 1.75rem;
    margin-bottom: 2rem;
  }

  .info-item {
    margin-bottom: 2rem;
  }

  .info-item h3 {
    color: var(--color-teal);
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .info-item p {
    color: var(--color-text);
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .info-item a {
    color: var(--color-teal);
    font-weight: 500;
  }

  .address-link {
    display: block;
    color: var(--color-text) !important;
    font-weight: 400;
    line-height: 1.6;
    text-decoration: none;
  }

  .address-link:hover {
    text-decoration: underline;
  }

  .social-section h3 {
    color: var(--color-teal);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .social-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .social-btn {
    background: var(--color-bg-alt);
    color: var(--color-navy);
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s;
  }

  .social-btn:hover {
    background: var(--color-teal);
    color: white;
  }

  .contact-form {
    text-align: center;
    background: var(--color-bg-alt);
    padding: 3rem;
    border-radius: 0.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .form-intro {
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .btn-large {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-teal);
    color: white !important;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background 0.2s, transform 0.2s;
  }

  .btn-large:hover {
    background: var(--color-teal-dark);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
