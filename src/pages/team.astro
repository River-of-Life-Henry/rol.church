---
import Base from '../layouts/Base.astro';
import PageHero from '../components/PageHero.astro';

// Try to load team data from JSON, fallback to empty array
let team = [];
try {
  const teamData = await import('../data/team.json');
  team = teamData.team || [];
} catch (e) {
  console.log('Team data not yet generated');
}
---

<Base title="Our Team" description="Meet the leadership team at River of Life who are dedicated to serving our community.">
  <PageHero title="Our Team" image="/hero/5.jpg" />

  <section class="team-content">
    <div class="team-container">
      {team.length === 0 && (
        <p class="no-team">Team information coming soon.</p>
      )}

      {team.map((person) => (
        <div class={`team-feature ${person.isPastor ? 'pastor' : 'member'}`}>
          <div class="team-feature-image" style={`background-image: url('${person.image}')`}></div>
          <div class="team-feature-info">
            <p class="team-role-label">{person.role}</p>
            <h2 class="team-name">{person.name}</h2>
            {person.bio && <p class="team-bio">{person.bio}</p>}
          </div>
        </div>
      ))}

      <div class="team-connect-cta">
        <h3>Want to Connect?</h3>
        <p>We'd love to hear from you. Reach out anytime!</p>
        <a href="/contact" class="btn">Contact Us</a>
      </div>
    </div>
  </section>
</Base>

<style is:global>
  .team-content {
    padding: 4rem 2rem;
  }

  .team-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .no-team {
    text-align: center;
    color: var(--color-text-light);
    font-size: 1.1rem;
    padding: 2rem;
  }

  .team-feature {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 2rem;
    background: var(--color-bg-alt);
    border-radius: 1rem;
    overflow: hidden;
  }

  .team-feature-image {
    height: 400px;
    background-size: cover;
    background-position: center top;
    background-color: var(--color-navy);
  }

  .team-feature-info {
    padding: 2rem 2rem 2rem 0;
  }

  .team-role-label {
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    color: var(--color-teal);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .team-name {
    color: var(--color-navy);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .team-bio {
    color: var(--color-text-light);
    line-height: 1.8;
    font-size: 1rem;
  }

  /* Smaller blocks for non-pastor members (75% size) */
  .team-feature.member {
    max-width: 75%;
    margin-left: auto;
    margin-right: auto;
  }

  .team-feature.member .team-feature-image {
    height: 300px;
  }

  .team-feature.member .team-role-label {
    font-size: 0.75rem;
  }

  .team-feature.member .team-name {
    font-size: 1.5rem;
  }

  .team-feature.member .team-bio {
    font-size: 0.9rem;
  }

  .team-connect-cta {
    text-align: center;
    background: var(--color-navy);
    color: white;
    padding: 3rem;
    border-radius: 0.5rem;
    margin-top: 2rem;
  }

  .team-connect-cta h3 {
    color: var(--color-gold);
    margin-bottom: 0.5rem;
  }

  .team-connect-cta p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .team-connect-cta .btn {
    background: white;
    color: var(--color-navy) !important;
  }

  .team-connect-cta .btn:hover {
    background: var(--color-gold);
  }

  @media (max-width: 768px) {
    .team-feature {
      grid-template-columns: 1fr;
    }

    .team-feature-image {
      height: 300px;
    }

    .team-feature-info {
      padding: 2rem;
    }

    .team-name {
      font-size: 1.5rem;
    }
  }
</style>
