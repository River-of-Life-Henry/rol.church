---
/**
 * Events Page
 *
 * Lists all upcoming events grouped by month.
 */

import Base from '../../layouts/Base.astro';
import PageHero from '../../components/shared/PageHero.astro';
import EventCard from '../../components/shared/EventCard.astro';

// Load events data and filter to next 6 weeks (or 12 weeks for featured)
let events = [];
try {
  const eventsData = await import('../../data/events.json');
  const allEvents = eventsData.events || [];

  // Filter: show events within 6 weeks, or up to 12 weeks if featured
  const now = new Date();
  const sixWeeksFromNow = new Date(now.getTime() + (6 * 7 * 24 * 60 * 60 * 1000));
  const twelveWeeksFromNow = new Date(now.getTime() + (12 * 7 * 24 * 60 * 60 * 1000));

  events = allEvents.filter(event => {
    const eventDate = new Date(event.startsAt);
    if (eventDate < now) return false;
    // Featured events can be up to 12 weeks out
    if (event.featured) return eventDate <= twelveWeeksFromNow;
    // Regular events only within 6 weeks
    return eventDate <= sixWeeksFromNow;
  });
} catch (e) {
  console.log('Events data not yet generated');
}

// Group events by month
function groupEventsByMonth(events: any[]): Record<string, any[]> {
  const grouped: Record<string, any[]> = {};

  events.forEach(event => {
    const date = new Date(event.startsAt);
    const monthKey = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric', timeZone: 'America/Chicago' });

    if (!grouped[monthKey]) {
      grouped[monthKey] = [];
    }
    grouped[monthKey].push(event);
  });

  return grouped;
}

const groupedEvents = groupEventsByMonth(events);
---

<Base title="Events" description="See what's happening at River of Life. View our calendar of upcoming events and activities.">
  <PageHero title="Events" image="/hero/4.jpg" />

  <section class="events-content">
    <div class="container">
      {events.length === 0 && (
        <p class="no-events">No upcoming events at this time. Check back soon!</p>
      )}

      {Object.entries(groupedEvents).map(([month, monthEvents]) => (
        <div class="month-group">
          <h2 class="month-header">{month}</h2>
          <div class="events-list">
            {monthEvents.map((event) => (
              <EventCard event={event} />
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <script>
    // Handle location clicks for clickable event cards (can't nest <a> tags)
    document.querySelectorAll('span.location-link[data-location-url]').forEach(el => {
      el.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const url = el.getAttribute('data-location-url');
        const isExternal = el.getAttribute('data-external') === 'true';
        if (url) {
          if (isExternal) {
            window.open(url, '_blank', 'noopener,noreferrer');
          } else {
            window.location.href = url;
          }
        }
      });
    });

    // Handle register clicks for featured events (can't nest <a> tags)
    document.querySelectorAll('span.register-link[data-register-url]').forEach(el => {
      el.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const url = el.getAttribute('data-register-url');
        if (url) {
          window.open(url, '_blank', 'noopener,noreferrer');
        }
      });
    });
  </script>
</Base>

<style is:global>
  .events-content {
    padding: 3rem 2rem;
    background: white;
  }

  .events-content .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .no-events {
    text-align: center;
    color: var(--color-text-light);
    font-size: 1.1rem;
    padding: 3rem;
  }

  .month-group {
    margin-bottom: 3rem;
  }

  .month-header {
    color: var(--color-navy);
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-gold);
  }

  .events-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .event-card {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: 0.75rem;
    transition: box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .event-card:hover {
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  /* Featured event styles */
  .event-card.featured {
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
    border: 2px solid var(--color-gold);
    position: relative;
  }

  .event-card.featured:hover {
    box-shadow: 0 6px 20px rgba(245, 197, 66, 0.3);
    transform: translateY(-2px);
  }

  .event-card.featured .event-date-badge {
    background: var(--color-gold);
    color: var(--color-navy);
  }

  .featured-star {
    color: var(--color-gold);
    margin-right: 0.25rem;
    vertical-align: middle;
  }

  .event-links {
    display: flex;
    gap: 1.5rem;
    margin-top: 0.75rem;
  }

  .event-link {
    display: inline-block;
    color: var(--color-teal);
    font-weight: 600;
    font-size: 0.9rem;
  }

  .event-links .event-link {
    margin-top: 0;
  }

  .event-details > .event-link {
    margin-top: 0.75rem;
  }

  .register-link {
    cursor: pointer;
  }

  .event-card.featured:hover .event-link {
    color: var(--color-teal-dark);
  }

  /* Registration event styles */
  .event-card.has-registration {
    border: 2px solid var(--color-teal);
    cursor: pointer;
  }

  .event-card.has-registration:hover {
    box-shadow: 0 6px 20px rgba(45, 156, 202, 0.2);
    transform: translateY(-2px);
  }

  .event-card.has-registration .event-date-badge {
    background: var(--color-teal);
  }

  .event-card.has-registration .event-link {
    color: var(--color-teal);
  }

  .event-card.has-registration:hover .event-link {
    color: var(--color-teal-dark);
  }

  .event-date-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 60px;
    height: 60px;
    background: var(--color-navy);
    border-radius: 0.5rem;
    color: white;
  }

  .event-day-num {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .event-day-name {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

  .event-details {
    flex: 1;
  }

  .event-name {
    color: var(--color-navy);
    font-size: 1.15rem;
    margin: 0 0 0.5rem;
  }

  .event-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .event-time,
  .event-location {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .event-time svg,
  .event-location svg {
    color: var(--color-teal);
    flex-shrink: 0;
  }

  a.location-link {
    text-decoration: none;
    transition: color 0.2s;
  }

  a.location-link:hover {
    color: var(--color-teal);
    text-decoration: underline;
  }

  span.location-link {
    cursor: pointer;
    transition: color 0.2s;
  }

  span.location-link:hover {
    color: var(--color-teal);
    text-decoration: underline;
  }

  .event-desc {
    color: var(--color-text);
    font-size: 0.9rem;
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .event-card {
      flex-direction: column;
      gap: 1rem;
    }

    .event-date-badge {
      flex-direction: row;
      width: fit-content;
      height: auto;
      padding: 0.5rem 1rem;
      gap: 0.5rem;
    }

    .event-day-num {
      font-size: 1.25rem;
    }

    .event-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
