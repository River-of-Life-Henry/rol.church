---
import Base from '../../layouts/Base.astro';
import PageHero from '../../components/PageHero.astro';

const steps = [
  {
    title: "Plan Your Visit",
    description: "New to ROL? We'd love to meet you! Let us know you're coming so we can make your first visit special.",
    href: "/next-steps/visit",
    icon: "ðŸ‘‹"
  },
  {
    title: "Foundations Class",
    description: "Learn about what we believe, how we operate, and how you can get connected at River of Life.",
    href: "/next-steps/foundations",
    icon: "ðŸ“–"
  },
  {
    title: "Baptism",
    description: "Ready to take the next step in your faith journey? Baptism is a public declaration of your faith in Jesus.",
    href: "/next-steps/baptism",
    icon: "ðŸ’§"
  },
  {
    title: "Volunteer",
    description: "Use your gifts to serve others. Find a team that fits your passions and make a difference.",
    href: "/next-steps/volunteer",
    icon: "ðŸ™Œ"
  }
];
---

<Base title="Next Steps" description="Take your next step at River of Life. Whether you're new or ready to go deeper, we have a path for you.">
  <PageHero title="Next Steps" image="/hero/2.jpg" />

  <section class="steps-content">
    <div class="container">
      <div class="steps-grid">
        {steps.map((step) => (
          <a href={step.href} class="step-card">
            <span class="step-icon">{step.icon}</span>
            <h2>{step.title}</h2>
            <p>{step.description}</p>
            <span class="step-link">Learn more â†’</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Base>

<style>
  .steps-content {
    padding: 4rem 2rem;
    background: var(--color-bg-alt);
  }

  .steps-content .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .step-card {
    background: white;
    padding: 2.5rem;
    border-radius: 1rem;
    text-decoration: none;
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
  }

  .step-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .step-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .step-card h2 {
    color: var(--color-navy);
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .step-card p {
    color: var(--color-text-light);
    line-height: 1.6;
    flex: 1;
  }

  .step-link {
    color: var(--color-teal);
    font-weight: 600;
    margin-top: 1.5rem;
  }

  .step-card:hover .step-link {
    color: var(--color-teal-dark);
  }
</style>
