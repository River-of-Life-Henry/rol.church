---
import Base from '../layouts/Base.astro';
import PageHero from '../components/PageHero.astro';
---

<Base title="Our Pastor" description="Meet Pastor Andrew & Chelsea Coffield, the senior pastor at River of Life.">
  <PageHero title="Our Pastor" image="/hero/5.jpg" />

  <section class="team-content">
    <div class="team-container">
      <div class="team-feature pastor">
        <div class="team-feature-image" style="background-image: url('/team/andrew_coffield.jpg')"></div>
        <div class="team-feature-info">
          <p class="team-role-label">Senior Pastor</p>
          <h2 class="team-name">Andrew & Chelsea Coffield</h2>
          <p class="team-bio">Pastor Andrew and Chelsea Coffield lead River of Life with a heart for helping people find and follow Jesus. Their passion is building a loving community where everyone can grow in their faith journey.</p>
        </div>
      </div>

      <div class="team-connect-cta">
        <h3>Want to Connect?</h3>
        <p>We'd love to hear from you. Reach out anytime!</p>
        <a href="/contact" class="btn">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Base>

<style is:global>
  .team-content {
    padding: 4rem 2rem;
  }

  .team-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .team-feature {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 2rem;
    background: var(--color-bg-alt);
    border-radius: 1rem;
    overflow: hidden;
  }

  .team-feature-image {
    height: 400px;
    background-size: cover;
    background-position: center top;
    background-color: var(--color-navy);
  }

  .team-feature-info {
    padding: 2rem 2rem 2rem 0;
  }

  .team-role-label {
    text-transform: uppercase;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    color: var(--color-teal);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .team-name {
    color: var(--color-navy);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .team-bio {
    color: var(--color-text-light);
    line-height: 1.8;
    font-size: 1rem;
  }

  .team-connect-cta {
    text-align: center;
    background: var(--color-navy);
    color: white;
    padding: 3rem;
    border-radius: 0.5rem;
    margin-top: 2rem;
  }

  .team-connect-cta h3 {
    color: var(--color-gold);
    margin-bottom: 0.5rem;
  }

  .team-connect-cta p {
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .team-connect-cta .btn {
    background: white;
    color: var(--color-navy) !important;
  }

  .team-connect-cta .btn:hover {
    background: var(--color-gold);
  }

  @media (max-width: 768px) {
    .team-feature {
      grid-template-columns: 1fr;
    }

    .team-feature-image {
      height: 300px;
    }

    .team-feature-info {
      padding: 2rem;
    }

    .team-name {
      font-size: 1.5rem;
    }
  }
</style>
