<style is:global>
  :root {
    --color-teal: #2d9cca;
    --color-teal-dark: #1a7ba8;
    --color-gold: #f5c542;
    --color-navy: #1a3a4a;
    --color-navy-light: #2a4a5a;
    --color-text: #1a3a4a;
    --color-text-light: #4a6a7a;
    --color-bg: #ffffff;
    --color-bg-alt: #f0f7fa;
    --font-sans: 'Montserrat', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-script: 'Dancing Script', cursive;
    --header-height: 110px;
    --hello-bar-height: 40px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Hello Bar - Featured Event Announcement */
  .hello-bar {
    background: linear-gradient(90deg, var(--color-gold) 0%, #f0b429 100%);
    color: var(--color-navy);
    padding: 0.5rem 1rem;
    text-align: center;
    font-size: 0.9rem;
    position: relative;
    z-index: 200;
    height: var(--hello-bar-height);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: background 0.2s;
  }

  .hello-bar:hover {
    background: linear-gradient(90deg, #f0b429 0%, #e0a420 100%);
    color: var(--color-navy);
  }

  /* Hello bar is also fixed at top */
  .hello-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
  }

  /* Push header down when hello bar is present */
  .has-hello-bar header {
    top: var(--hello-bar-height);
  }

  /* Add padding to body to account for fixed header */
  .has-hello-bar main {
    padding-top: var(--hello-bar-height);
  }

  .hello-bar-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    max-width: 1200px;
  }

  .hello-bar-text {
    font-weight: 500;
  }

  .hello-bar-text strong {
    font-weight: 700;
  }

  .hello-bar-link {
    color: var(--color-navy);
    font-weight: 700;
    text-decoration: none;
    padding: 0.2rem 0.6rem;
    border-radius: 0.25rem;
    transition: background 0.2s;
  }

  .hello-bar-link:hover {
    background: rgba(26, 58, 74, 0.1);
  }

  @media (max-width: 768px) {
    .hello-bar {
      position: relative;
      height: auto;
      padding: 0.5rem 0.75rem;
    }

    .hello-bar-content {
      gap: 0.3rem;
      flex-direction: column;
    }

    .hello-bar-text {
      font-size: 0.8rem;
    }

    .hello-bar-link {
      font-size: 0.75rem;
    }

    /* On mobile, make header relative so it stacks below hello bar */
    .has-hello-bar header {
