---
/**
 * Base Layout
 *
 * Main layout wrapper for all pages. Includes meta tags, analytics,
 * header, footer, and global styles.
 *
 * Props:
 *   title - Page title (appended to site name)
 *   description - Meta description for SEO
 *   image - OG image path (default: /logo-full.jpg)
 *   headerScrolled - Start header in scrolled state
 *
 * Usage:
 *   <Base title="Events" description="Upcoming events at River of Life">
 *     <YourContent />
 *   </Base>
 */

import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import HelloBar from '../components/layout/HelloBar.astro';
import Analytics from '../components/layout/Analytics.astro';
import EventTracking from '../components/layout/EventTracking.astro';
import VisitCTA from '../components/layout/VisitCTA.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  headerScrolled?: boolean;
}

const {
  title = "River of Life",
  description = "Where life begins - A loving community of Christ-followers in Henry, IL dedicated to serving people on their spiritual journey.",
  image = "/logo-full.jpg",
  headerScrolled = false
} = Astro.props;

// Load featured event for hello bar
let featuredEvent = null;
try {
  const featuredData = await import('../data/featured_event.json');
  const event = featuredData.event || null;

  // Only show the hello bar if the event hasn't ended yet
  if (event && event.endsAt) {
    const now = new Date();
    const eventEnd = new Date(event.endsAt);
    if (now < eventEnd) {
      featuredEvent = event;
    }
  } else if (event) {
    featuredEvent = event;
  }
} catch (e) {
  console.log('Featured event data not yet generated');
}

const siteUrl = "https://rol.church";
const fullTitle = title === "River of Life"
  ? "River of Life | Apostolic Pentecostal Church in Henry, IL"
  : `${title} | River of Life`;

// Structured data for Church
const churchSchema = {
  "@context": "https://schema.org",
  "@type": "Church",
  "name": "River of Life",
  "alternateName": "ROL Henry",
  "description": description,
  "slogan": "Where life begins",
  "url": siteUrl,
  "logo": `${siteUrl}/logo.png`,
  "image": `${siteUrl}/logo-full.jpg`,
  "telephone": "+1-309-364-3165",
  "email": "info@rol.church",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "425 University Ave",
    "addressLocality": "Henry",
    "addressRegion": "IL",
    "postalCode": "61537",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "41.1114",
    "longitude": "-89.3564"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Sunday",
      "opens": "10:00",
      "closes": "12:30"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Wednesday",
      "opens": "19:00",
      "closes": "20:30"
    }
  ],
  "sameAs": [
    "https://www.facebook.com/rolhenry",
    "https://www.youtube.com/@rol-henry",
    "https://rolhenry.churchcenter.com"
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content="church, Henry IL, River of Life, Christian, worship, bible study, community, faith" />
    <meta name="author" content="River of Life" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Google Fonts - optimized loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500&family=Montserrat:wght@400;500;600;700&display=swap" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" crossorigin>

    <!-- Preload hero image for LCP -->
    <link rel="preload" as="image" type="image/webp" href="/hero/1.webp" fetchpriority="high">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="River of Life" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={siteUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />

    <!-- Additional SEO -->
    <link rel="canonical" href={siteUrl} />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(churchSchema)} />

    <!-- Analytics (GA4, Clarity, Meta Pixel) -->
    <Analytics />
  </head>
  <body class={featuredEvent ? 'has-hello-bar' : ''}>
    <HelloBar event={featuredEvent} />
    <Header scrolled={headerScrolled} />

    <main>
      <slot />
    </main>

    <VisitCTA />
    <Footer />
    <EventTracking />
  </body>
</html>

<style is:global>
  :root {
    --color-teal: #2d9cca;
    --color-teal-dark: #1a7ba8;
    --color-gold: #f5c542;
    --color-navy: #1a3a4a;
    --color-navy-light: #2a4a5a;
    --color-text: #1a3a4a;
    --color-text-light: #4a6a7a;
    --color-bg: #ffffff;
    --color-bg-alt: #f0f7fa;
    --font-sans: 'Montserrat', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-script: 'Dancing Script', cursive;
    --header-height: 110px;
    --hello-bar-height: 40px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-sans);
    color: var(--color-text);
    line-height: 1.6;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-weight: 400;
  }

  main {
    flex: 1;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-sans);
    font-weight: 600;
  }

  /* Script font utility class */
  .script-font {
    font-family: var(--font-script);
  }

  /* Screen reader only - visually hidden but accessible */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  blockquote {
    font-family: var(--font-script);
    font-size: 1.25rem;
  }

  a {
    color: var(--color-teal-dark);
    text-decoration: none;
  }

  a:hover {
    color: var(--color-teal);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-teal);
    color: white !important;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-family: var(--font-sans);
    font-weight: 600;
    letter-spacing: 0.02em;
    transition: background 0.2s, transform 0.2s;
  }

  .btn:hover {
    background: var(--color-teal-dark);
    transform: translateY(-1px);
  }

  .btn svg {
    width: 1.125em;
    height: 1.125em;
    flex-shrink: 0;
  }

  .btn-large {
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
  }

  .btn-large svg {
    width: 1.25em;
    height: 1.25em;
  }

  @media (max-width: 768px) {
    :root {
      --hello-bar-height: 28px;
    }
  }
</style>
